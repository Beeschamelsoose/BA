/* USER CODE BEGIN PV */
DHT11_HandleTypeDef dht1 = {GPIOA, GPIO_PIN_0}; // Sensor 1 an PA0
DHT11_HandleTypeDef dht2 = {GPIOA, GPIO_PIN_1}; // Sensor 2 an PA1
DHT11_HandleTypeDef dht3 = {GPIOA, GPIO_PIN_3}; // Sensor 3 an PA3

float temp1, temp2, temp3;
//uint8_t t1, t2, t3;
uint8_t hum1, hum2, hum3;
//uint8_t h1,h2,h3;


uint32_t raw, value_adc, s1,s2;
float v;
/* USER CODE END PV */

